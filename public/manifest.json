{
  "manifest_version": 3,
  "name": "input_autofill_chrome_extension",
  "version": "0.0.1",
  "description": "Extension for saving prompts and easy adding to any input field",
  "permissions": [
    "storage"
  ],
  "action": {},
  "content_scripts": [
    {
      "js": [
        "input_autofill_chrome_extension.index.js"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://copilot.microsoft.com/*",
        "https://gemini.google.com/*",
        "https://*.chat.lab.epam.com/*"
      ]
    }
  ]
}