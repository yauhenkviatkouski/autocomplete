{
  "manifest_version": 3,
  "name": "input_autofill_chrome_extension",
  "version": "0.0.1",
  "description": "Extension for saving prompts and easy adding to any input field",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "index.html#popup"
  },
  "content_scripts": [
    {
      "js": [
        "input_autofill_chrome_extension.index.js"
      ],
      "css": [
        "input_autofill_chrome_extension.index.css"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}